<% if user_signed_in? %>
  <% if current_user.already_liked?(post) %>
    <%= link_to post_like_path(post.id, current_user.id), method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"> </i>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post.id), method: :post, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: #C0C0C0;"></i>
    <% end %>
  <% end %>
<% else %>
  <i class="fa fa-heart" aria-hidden="true"></i>
<% end %>

<%= post.likes.count %>