<% if user_signed_in? && @user == current_user %>
  <h1>マイページ</h1>
<% else %>
  <h1>ユーザーページ</h1>
<% end %>

<% if @user.image? %>
  <%= image_tag @user.image.thumb.url %>
<% else %>
  <%= image_tag "default.jpg", :size =>'100x100' %>
<% end %>

<h1><%= @user.name %></h1>

<%= render 'shared/users_posts' %>