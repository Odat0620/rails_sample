<h1><%= @post.title %></h1>
<div>
  <%= @post.content %><br/>
  <%= @post.created_at.strftime("%Y-%m-%d %H:%M:%S") %> | 

  <% if @post.user_id == current_user&.id %>
      <%= link_to "編集", edit_post_path(@post.id) %> | 
      <%= link_to "削除", post_path(@post.id), method: :delete, data: { confirm: "本当に削除しますか？" } %>
  <% end %>

  <div class="post-like mr-auto">
    <%= render 'likes/like', post: @post %>
  </div>
  <% if @post.user.image? %>
    <%= link_to image_tag(@post.user.image.thumb30.url, class:"user-icon"), user_path(@post.user) %>
  <% else %>
    <%= link_to image_tag("default30.jpg", class:"user-icon"), user_path(@post.user) %>
  <% end %>

  <%= link_to @post.user.name, user_path(@post.user) %>
</div>

<%= render 'posts/comment_area' %>