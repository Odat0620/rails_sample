<%= form_with model: @post, local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, autofocus: true, placeholder: "20文字まで", class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :content, "本文" %>
    <%= f.text_area :content, placeholder: "本文を入力してください。", rows: '6', class: "form-control" %>
  </div>
  
  <div class="submit">
    <%= f.submit post_save, class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
  
<br/>
<div>
  <%= link_to :back do %>
    <button class="btn btn-secondary btn-block">戻る</button>
  <% end %>
</div>