<h2>投稿を編集する</h2>
<div class="contents row">
  <%= form_with model: @post, local: true do |f| %>

    <div class="form-group">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :content, "本文" %>
      <%= f.text_area :content, placeholder: "本文を入力してください。", rows: '6', class: "form-control" %>
    </div>
   
    <div class="submit">
      <%= f.submit "保存", class: 'btn btn-primary btn-block' %>
    </div><br/>
  <div>
    <%= link_to :back do %>
      <button class="btn btn-secondary btn-block">戻る</button>
    <% end %>
  </div>
  <% end %>
  
</div>