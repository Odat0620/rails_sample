<h2>投稿検索</h2>
<%= link_to '投稿する', new_post_path, {class: 'btn btn-primary withripple' }%>
<%= link_to '自分の投稿一覧へ', posts_path, {class: 'btn btn-primary withripple' }%>
<div>
  <% @posts.each do |post| %>
  <%= post.title %> |
  <%= post.content %> |
  <%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  <%= link_to post.user.name, user_path(post.user) %><br/>
  <% end %>

  <%= paginate(@posts) %>
</div>